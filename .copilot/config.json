{
  "$schema": "https://copilot.github.com/schemas/config.json",
  "defaultCodeStyle": {
    "typescript": {
      "useSemicolons": true,
      "quoteStyle": "single",
      "trailingComma": "es5",
      "preferInterfaces": true,
      "sortImports": true
    },
    "javascript": {
      "useSemicolons": true,
      "quoteStyle": "single",
      "trailingComma": "es5",
      "preferArrowFunctions": true
    }
  },
  "telemetry": {
    "enabled": false
  },
  "enableReadmeContext": true,
  "enableProjectContext": true
}
